{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx" : "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser"
  ]
}
